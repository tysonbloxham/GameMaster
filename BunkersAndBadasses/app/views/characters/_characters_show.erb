<div class="container pt-1">
 <div class="row">
  <div class="col-lg-4">
    <% case character %>
    <% when Assassin %>
      <%= image_tag "Assassin.jpg", class: 'show-background' %>
    <% when Gunzerker %>
      <%= image_tag "Gunzerker.jpg", class: 'show-background' %>      
    <% when Commando %>
      <%= image_tag "Commando.png", class: 'show-background' %>      
    <% when Mechromancer %>
      <%= image_tag "Mechromancer.jpg", class: 'show-background' %>      
    <% when Siren %>
      <%= image_tag "Siren.jpg", class: 'show-background' %>      
    <% when Psycho %>
      <%= image_tag "Psycho.png", class: 'show-background' %>
    <% end %>
  </div>

  <div class="col-lg-8">
    <div class="card">
    
      <p id="notice"><%= notice %></p>

      <p>
        <strong>Name:</strong>
        <%= character.character_name %>
      </p>

      <p>
        <strong>Level:</strong>
        <%= character.level %>
      </p>

      <p>
        <strong>Experience:</strong>
        <%= character.experience %>
        <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated bg-success" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= character.experience % 100 %>%"></div>
        </div>
      </p>

      <p>
        <strong>Health:</strong>
        <%= character.current_health %> / <%= character.health %>
        <div class="progress">
          <div class="progress-bar progress-bar-striped progress-bar-animated bg-danger" role="progressbar" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100" style="width: <%= (character.current_health.to_f / character.health.to_f) * 100 %>%"></div>
        </div>
      </p>

      <p>
        <strong>Action Points:</strong>
        <%= character.action_points %>
      </p>

      <p>
        <strong>Evasion:</strong>
        <%= character.evasion %>
      </p>

<!--       <p>
        <strong>Character class:</strong>
        <%#= character.character_class %>
      </p> -->

      <%#= link_to 'Edit', edit_character_path(@character) %>
      <div class="row">
        <div class="col-lg-1"></div>
        <div class="col-lg-4 pb-2">
          <%= link_to 'Back', root_path, class: 'btn btn-primary btn-block' %>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-4 pb-2">
          <%= link_to 'Delete Character', character, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-block'%>
        </div>
      </div>
    </div>
  </div>
 </div>
</div>
