<p id="notice"><%= notice %></p>

<h1>Characters</h1>

<table>
  <thead>
    <tr>
      <th>Character name</th>
      <th>Level</th>
      <th>Experience</th>
      <th>Health</th>
      <th>Action points</th>
      <th>Badass points</th>
      <th>Evasion</th>
      <th>Character class</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @characters.each do |character| %>
      <tr>
        <td><%= character.character_name %></td>
        <td><%= character.level %></td>
        <td><%= character.experience %></td>
        <td><%= character.health %></td>
        <td><%= character.action_points %></td>
        <td><%= character.badass_points %></td>
        <td><%= character.evasion %></td>
        <td><%= character.character_class %></td>
        <td><%= link_to 'Show', character %></td>
        <td><%= link_to 'Edit', edit_character_path(character) %></td>
        <td><%= link_to 'Destroy', character, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

