<p id="notice"><%= notice %></p>

<h1>Sirens</h1>

<table>
  <thead>
    <tr>
      <th>Character name</th>
      <th>Level</th>
      <th>Experience</th>
      <th>Health</th>
      <th>Action points</th>
      <th>Badass points</th>
      <th>Evasion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sirens.each do |siren| %>
      <tr>
        <td><%= siren.character_name %></td>
        <td><%= siren.level %></td>
        <td><%= siren.experience %></td>
        <td><%= siren.health %></td>
        <td><%= siren.action_points %></td>
        <td><%= siren.badass_points %></td>
        <td><%= siren.evasion %></td>
        <td><%= link_to 'Show', siren %></td>
        <td><%= link_to 'Edit', edit_siren_path(siren) %></td>
        <td><%= link_to 'Destroy', siren, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

