<p id="notice"><%= notice %></p>

<h1>Psychos</h1>

<table>
  <thead>
    <tr>
      <th>Character name</th>
      <th>Level</th>
      <th>Experience</th>
      <th>Health</th>
      <th>Current health</th>
      <th>Action points</th>
      <th>Badass points</th>
      <th>Evasion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @psychos.each do |psycho| %>
      <tr>
        <td><%= psycho.character_name %></td>
        <td><%= psycho.level %></td>
        <td><%= psycho.experience %></td>
        <td><%= psycho.health %></td>
        <td><%= psycho.current_health %></td>
        <td><%= psycho.action_points %></td>
        <td><%= psycho.badass_points %></td>
        <td><%= psycho.evasion %></td>
        <td><%= link_to 'Show', psycho %></td>
        <td><%= link_to 'Edit', edit_psycho_path(psycho) %></td>
        <td><%= link_to 'Destroy', psycho, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Psycho', new_psycho_path %>
