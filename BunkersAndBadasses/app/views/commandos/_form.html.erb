    <div>
      <%= form.label :action_points %>
      <%= form.number_field :action_points, readonly: true, class: 'float-right' %>
    </div>
    <div>
      <%= form.label :evasion %>
      <%= form.number_field :evasion, readonly: true, class: 'float-right' %>
    </div>
  </div>

  <div class="actions text-center pt-3">
    <%= form.submit %>
  </div>
<% end %>
