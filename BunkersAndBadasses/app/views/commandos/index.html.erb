<p id="notice"><%= notice %></p>

<h1>Commandos</h1>

<table>
  <thead>
    <tr>
      <th>Character name</th>
      <th>Level</th>
      <th>Experience</th>
      <th>Health</th>
      <th>Current health</th>
      <th>Action points</th>
      <th>Badass points</th>
      <th>Evasion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @commandos.each do |commando| %>
      <tr>
        <td><%= commando.character_name %></td>
        <td><%= commando.level %></td>
        <td><%= commando.experience %></td>
        <td><%= commando.health %></td>
        <td><%= commando.current_health %></td>
        <td><%= commando.action_points %></td>
        <td><%= commando.badass_points %></td>
        <td><%= commando.evasion %></td>
        <td><%= link_to 'Show', commando %></td>
        <td><%= link_to 'Edit', edit_commando_path(commando) %></td>
        <td><%= link_to 'Destroy', commando, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

