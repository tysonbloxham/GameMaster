<p id="notice"><%= notice %></p>

<h1>Mechromancers</h1>

<table>
  <thead>
    <tr>
      <th>Character name</th>
      <th>Level</th>
      <th>Experience</th>
      <th>Health</th>
      <th>Current health</th>
      <th>Action points</th>
      <th>Badass points</th>
      <th>Evasion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mechromancers.each do |mechromancer| %>
      <tr>
        <td><%= mechromancer.character_name %></td>
        <td><%= mechromancer.level %></td>
        <td><%= mechromancer.experience %></td>
        <td><%= mechromancer.health %></td>
        <td><%= mechromancer.current_health %></td>
        <td><%= mechromancer.action_points %></td>
        <td><%= mechromancer.badass_points %></td>
        <td><%= mechromancer.evasion %></td>
        <td><%= link_to 'Show', mechromancer %></td>
        <td><%= link_to 'Edit', edit_mechromancer_path(mechromancer) %></td>
        <td><%= link_to 'Destroy', mechromancer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Mechromancer', new_mechromancer_path %>
